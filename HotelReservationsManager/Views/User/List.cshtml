@{
}
@model List<User>

<h1>Users</h1>

<td><a class="btn btn-primary" asp-controller="User" asp-action="Add">Add a new user.</a></td>

<table class="table">
	<thead>
		<tr>
			<th>First Name</th>
			<th>Middle Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>EGN</th>
			<th>Phone Number</th>
			<th>Hire Date</th>
			<th>Fire Date</th>
			<th>Active</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.FirstName</td>
				<td>@item.MiddleName</td>
				<td>@item.LastName</td>
				<td>@item.Email</td>
				<td>@item.EGN</td>
				<td>@item.PhoneNumber</td>
				<td>@item.HireDate</td>
				<td>@item.FireDate</td>
				<td>@item.Active</td>
				<td><a class="btn btn-primary" asp-controller="User" asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
			</tr>
		}
	</tbody>
</table>