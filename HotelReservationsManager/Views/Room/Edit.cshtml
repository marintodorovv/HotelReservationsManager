@{
}
@using HotelReservationsManager.Models.Entities;
@model Room

<h1>Edit Room</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="" method="post">
            <h2>Add a new room.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoomNumber"></label>
                <input asp-for="RoomNumber" class="form-control" />
                <span asp-validation-for="RoomNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Available"></label>
                <input asp-for="Available" class="form-check-input" />
                <span asp-validation-for="Available" class="form-check-label"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity"></label>
                <input asp-for="Capacity" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DropDownList("Type", Html.GetEnumSelectList<HotelReservationsManager.Models.Entities.Type>(), "Select Type", new {@class="form-control"})
            </div>
            <div class="form-group">
                <label asp-for="PricePerAdultBed"></label>
                <input asp-for="PricePerAdultBed" class="form-control" />
                <span asp-validation-for="PricePerAdultBed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricePerChildBed"></label>
                <input asp-for="PricePerChildBed" class="form-control" />
                <span asp-validation-for="PricePerChildBed" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
            <button id="deleteSubmit" type="submit" class="w-100 btn btn-lg btn-danger" asp-action="Delete" asp-controller="Room" asp-route-id="@Model.ID">>Delete</button>
        </form>
    </div>
</div>