@{
}
@model List<Client>

<h1>Clients</h1>

<td><a class="btn btn-primary" asp-controller="Client" asp-action="Add">Add a new client.</a></td>

<table class="table">
	<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>Phone Number</th>
			<th>Adult</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
				<tr>
					<td>@item.FirstName</td>
					<td>@item.LastName</td>
					<td>@item.Email</td>
					<td>@item.PhoneNumber</td>
					<td>@item.Adult</td>
					<td><a class="btn btn-primary" asp-controller="Client" asp-action="Edit" asp-route-id="@item.ID">Edit</a></td>
				</tr>
		}
	</tbody>
</table>