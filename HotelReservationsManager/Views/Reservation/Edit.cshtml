@{
}
@using HotelReservationsManager.Models.Entities;
@model ReservationViewModel

<h1>Edit Reservation</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="" method="post">
            <h2>Add a new reservation.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room"></label>
                <input asp-for="Room" class="form-control" />
                <span asp-validation-for="Room" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccommodationDate"></label>
                <input asp-for="AccommodationDate" class="input" type="datetime-local" />
                <span asp-validation-for="AccommodationDate"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeaveDate"></label>
                <input asp-for="LeaveDate" class="input" type="datetime-local" />
                <span asp-validation-for="LeaveDate"></span>
            </div>
            <div class="form-group">
                <label asp-for="Breakfast"></label>
                <input asp-for="Breakfast" class="form-check-input" />
                <span asp-validation-for="Breakfast" class="form-check-label"></span>
            </div>
            <div class="form-group">
                <label asp-for="AllInclusive"></label>
                <input asp-for="AllInclusive" class="form-check-input" />
                <span asp-validation-for="AllInclusive" class="form-check-label"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary" asp-action="Edit" asp-controller="Reservation" asp-route-id="@Model">Save</button>
            <button id="deleteSubmit" type="submit" class="w-100 btn btn-lg btn-danger" asp-action="Delete" asp-controller="Reservation" asp-route-id="@Model.Id">>Delete</button>
        </form>
    </div>
</div>